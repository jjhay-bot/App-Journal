<div class="row g-0 sidebar">
  <div class="col-sm-6 col-md-10 width_full">
    <%= render "layouts/nav" %>
    <p id="notice" class="ms-4"><%= notice %></p>
    <h2 class="ms-4">Today's Tasks:</h2>
    <%= render 'tasks/task_today' %>
    </p>
  </div>

  <div class="col-6 col-md-1 category_padding width_full">
    <h3 class="ms-4 mt-4">Categories</h3>
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="d-flex">
          <div class="container category_side">
            <% @categories.each do |category| %>
              <div class="card card-width-18 ms-4 category_side">
                <div class="card-body ">
                  <h5 class="card-title"><%= category.category %></h5>
                  <p class="card-text"><%= category.content %></p>
                  <%= link_to 'Show', category, class: "btn btn-outline-primary btn-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <br>
  <%= link_to 'Add Category', new_category_path, class: "btn btn-primary ms-4" %>

  </div>
</div>