<%#= form_with model: [@task] do |f| %>
<%= form_with model: [@category, @task], local: true do |f| %>
    <p >
        <strong><%= f.label :name %></strong>
        <%= f.text_field :name %>
    </p>
    <p class="form-group mt-2">

    <strong>
        <%= f.label :description, "Description" %></strong>
        <%= f.text_area :description, placeholder: "Task description" %>
    </p>

    <strong>
        <%= f.label :schedule, "Schedule" %></strong>
        <%= f.text_area :schedule, placeholder: "Date" %>
    </p>

    <p >
        <%= f.submit "Update Task" %>
    </p>
<% end %>
