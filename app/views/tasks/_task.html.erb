<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.category %></td>
        <td><%= t.description %></td>
        <td><%= link_to 'Edit', [:edit, @category] %></td>
    <% end %>
  </tbody>
</table>