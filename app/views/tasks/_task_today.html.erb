<div class="container cover px-2">
  <div id="carouselDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
      <li data-bs-target="#carouselDark" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#carouselDark" data-bs-slide-to="1"></li>
      <li data-bs-target="#carouselDark" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item">
        <img src="https://s20427.pcdn.co/wp-content/uploads/2018/04/mood-boost-696x489.jpg" class="d-block w-100 cover_image" alt="Slide 1">
      </div>
      <div class="carousel-item active">
        <img src="https://img3.goodfon.com/wallpaper/nbig/7/ae/devochka-sarafan-priroda-6863.jpg" class="d-block w-100  cover_image" alt="Slide 2">
      </div>
      <div class="carousel-item">
        <img src="https://scienceofstory.b-cdn.net/wp-content/uploads/2017/07/mi-pham-223464-1024x683.jpg" class="d-block w-100  cover_image" alt="Slide 3">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselDark" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselDark" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>  
</div>

<div class="container">
  <div class="d-flex mt-4 mx-4 rowtoday"> 
    <% @tasks.each do |task| %>
      <div class="card card-width-18 mx-2 my-2">
        <div class="card-body ">
          <div class="card-title"><strong><%= task.name.upcase %></strong></div>
          <div class="card-text text-muted"><%= task.description %></div>
        </div>
        <div class="card-footer text-muted"><%= task.schedule.strftime("%B %-d %Y") %></div>
      </div>
    <% end %>
  </div>  
</div>
