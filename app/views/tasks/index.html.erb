<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.id %></td>
        <td><%= link_to 'Show', [@category, task] %></td>
        <td><%= link_to "Edit", [:edit, @category, task] %></td>

    <% end %>
  </tbody>
</table>