<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.category %></td>
        <td><%= t.description %></td>
        <td><%= t 'Edit', method: [ @category,:edit] %></td>
        <td><%= t 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>